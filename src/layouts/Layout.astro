---
// Supports weights 100-900
import '@fontsource-variable/onest';
import Header from "../components/header.astro";
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">

    <!-- HTML Meta Tags -->
    <title>Galatea artes escénicas
    </title>
    <meta name="description" content="Proyectos teatrales y cinematográficos.
">

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://galateateatro.vercel.app/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="Galatea artes escénicas
    ">
    <meta property="og:description" content="Proyectos teatrales y cinematográficos.
">
    <meta property="og:image" content="/logo.png ">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="galateateatro.vercel.app">
    <meta property="twitter:url" content="https://galateateatro.vercel.app/">
    <meta name="twitter:title" content="Galatea artes escénicas
    ">
    <meta name="twitter:description" content="Proyectos teatrales y cinematográficos.
">
    <meta name="twitter:image" content="/logo.png">

</head>
<body>
<div class="absolute top-0 z-[-2] h-screen w-[100%] bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>


<Header/>
<slot/>
</body>
</html>
<style is:global>
    html {
        font-family: system-ui, "Onest Variable";

    }

    body {
        background-color: rgb(10 10 10 / 1);
    }
</style>
